<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/imageViewcard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#000"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pasta"
            android:scaleType="fitXY"
            app:layout_constraintCircleRadius="10dp"
            />


    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tvrunning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20dp"
        android:text="Nasgor King Samble Pedas"
        android:textColor="@color/black"
        android:maxWidth="180dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewcard"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="$7,00"
        android:textColor="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="The Palatable sensation we lovingly reffer to us the cheeseburger."
        android:maxWidth="200sp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewcard"
        app:layout_constraintTop_toBottomOf="@+id/tvrunning" />

    <View
        android:id="@+id/lineview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewcard"
        android:layout_marginTop="20sp"
        android:layout_marginStart="100sp"

        />



</android.support.constraint.ConstraintLayout>